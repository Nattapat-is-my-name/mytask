<%= link_to task, class: "block group" do %>
  <article class="p-6 bg-white shadow-sm border border-gray-200 rounded-md flex flex-col sm:flex-row sm:justify-between sm:items-center space-y-4 sm:space-y-0 hover:shadow-lg hover:border-gray-300 transition-all duration-200 cursor-pointer <%= 'bg-red-50 border-red-200 hover:border-red-300' if task.overdue? && !task.completed? %>">
    <div class="flex items-center space-x-4">
      <!-- Checkbox form that prevents event bubbling -->
      <div onclick="event.stopPropagation()">
        <%= form_with model: task, method: :patch do |f| %>
          <%= f.check_box :completed, { 
            checked: task.completed, 
            onchange: 'this.form.submit()', 
            class: 'h-6 w-6 text-blue-600 border-gray-300 rounded focus:ring-blue-500' 
          } %>
        <% end %>
      </div>
      <div class="flex flex-col flex-1">
        <div class="flex items-center space-x-3 mb-2">
          <span class="text-lg font-medium <%= 'line-through text-gray-400' if task.should_strikethrough? %>">
            <%= task.title %>
          </span>
          <!-- Completion Status Badge -->
          <% if task.completed? %>
            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
              <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              Completed
            </span>
          <% else %>
            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
              <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
              </svg>
              In Progress
            </span>
          <% end %>
        </div>
        <!-- Due Time Information -->
        <% if task.due_time.present? %>
          <div class="text-sm">
            <span class="<%= 'text-red-600 font-medium' if task.overdue? && !task.completed? %> <%= 'text-gray-500' unless task.overdue? && !task.completed? %>">
              Due: <%= task.due_time.strftime("%B %d, %Y at %l:%M %p") %>
              <% if task.overdue? && !task.completed? %>
                <span class="block text-red-500 mt-1 font-medium">(Overdue by <%= time_ago_in_words(task.due_time) %>)</span>
              <% end %>
            </span>
          </div>
        <% else %>
          <span class="text-sm text-gray-400">No due date set</span>
        <% end %>
      </div>
    </div>
    <!-- Action Buttons -->
    <nav class="flex flex-wrap gap-2 justify-end sm:justify-start" onclick="event.stopPropagation()">
      <%= link_to "Edit", edit_task_path(task), 
            class: "rounded-md px-3 py-1.5 text-xs font-medium bg-blue-100 text-blue-700 hover:bg-blue-200 transition-colors" %>
      <%= link_to confirm_delete_task_path(task), 
            data: { 
              turbo_frame: "modal",
              turbo_action: "advance" 
            },
            class: "group/delete rounded-md px-3 py-1.5 text-xs font-medium bg-red-50 text-red-600 hover:bg-red-100 hover:text-red-700 border border-red-200 transition-all duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-1" do %>
        <span class="flex items-center space-x-1">
          <svg class="w-3 h-3 group-hover/delete:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
          <span>Delete</span>
        </span>
      <% end %>
    </nav>
  </article>
<% end %>