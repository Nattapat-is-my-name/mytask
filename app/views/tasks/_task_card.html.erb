<div class="relative">
  <%= turbo_frame_tag "task_#{task.id}" do %>
    <%= link_to task, class: "block group" do %>
      <article class="p-4 sm:p-6 bg-white shadow-sm border border-gray-200 rounded-md flex flex-col space-y-3 sm:space-y-4 hover:shadow-lg hover:border-gray-300 transition-all duration-200 cursor-pointer <%= 'bg-red-50 border-red-200 hover:border-red-300' if task.overdue? && !task.completed? %>">
        <div class="flex items-start sm:items-center space-x-3 sm:space-x-4">
          <!-- Checkbox form with proper event handling -->
          <%= form_with model: task, method: :patch, 
                data: { turbo_frame: "task_#{task.id}" },
                onclick: "event.stopPropagation()",
                class: "flex-shrink-0 mt-1 sm:mt-0" do |f| %>
            <%= f.check_box :completed, { 
                  checked: task.completed, 
                  onchange: 'this.form.submit()', 
                  onclick: 'event.stopPropagation()',
                  class: 'h-5 w-5 sm:h-6 sm:w-6 text-blue-600 border-gray-300 rounded focus:ring-blue-500' 
             } %>
          <% end %>
          <div class="flex flex-col flex-1 min-w-0">
            <div class="flex flex-col sm:flex-row sm:items-center sm:space-x-3 mb-2">
              <span class="text-base sm:text-lg font-medium <%= 'line-through text-gray-400' if task.should_strikethrough? %> break-words">
                <%= task.title %>
              </span>
              <!-- Completion Status Badge -->
              <div class="mt-2 sm:mt-0">
                <% if task.completed? %>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                    </svg>
                    Completed
                  </span>
                <% elsif task.overdue? && !task.completed? %>
                  <!-- Overdue Status -->
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                    <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                    </svg>
                    Overdue
                  </span>
                <% else %>
                  <!--  In Progress Status -->
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                    <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                    </svg>
                    In Progress
                  </span>
                <% end %>
              </div>
            </div>
            <!-- Due Time Information -->
            <% if task.due_time.present? %>
              <div class="text-sm">
                <span class="<%= 'text-red-600 font-medium' if task.overdue? && !task.completed? %> <%= 'text-gray-500' unless task.overdue? && !task.completed? %>">
                  Due: <%= task.due_time.strftime("%B %d, %Y at %l:%M %p") %>
                  <% if task.overdue? && !task.completed? %>
                    <span class="block text-red-500 mt-1 font-medium">(Overdue by <%= time_ago_in_words(task.due_time) %>)</span>
                  <% end %>
                </span>
              </div>
            <% else %>
              <span class="text-sm text-gray-400">No due date set</span>
            <% end %>
          </div>
        </div>
        <!-- Mobile buttons section -->
        <div class="flex sm:hidden justify-center gap-2 pt-3 border-t border-gray-100">
          <%= link_to "Edit", edit_task_path(task), 
                onclick: "event.stopPropagation()",
                class: "flex-1 flex items-center justify-center rounded-md px-3 py-2 text-xs font-medium bg-blue-100 text-blue-700 hover:bg-blue-200 transition-colors" %>
          <%= link_to confirm_delete_task_path(task), 
                data: { 
                  turbo_frame: "modal",
                  turbo_action: "advance" 
                },
                onclick: "event.stopPropagation()",
                class: "flex-1 group/delete flex items-center justify-center rounded-md px-3 py-2 text-xs font-medium bg-red-50 text-red-600 hover:bg-red-100 hover:text-red-700 border border-red-200 transition-all duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-1" do %>
            <span class="flex items-center justify-center space-x-1">
              <svg class="w-3 h-3 group-hover/delete:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
              <span>Delete</span>
            </span>
          <% end %>
        </div>
      </article>
    <% end %>
  <% end %>
  <!-- Desktop buttons - hidden on mobile -->
  <div class="hidden sm:flex absolute top-1/2 right-6 -translate-y-1/2 justify-center gap-2">
    <%= link_to "Edit", edit_task_path(task), 
          onclick: "event.stopPropagation()",
          class: "flex items-center justify-center rounded-md px-3 py-1.5 text-xs font-medium bg-blue-100 text-blue-700 hover:bg-blue-200 transition-colors" %>
    <%= link_to confirm_delete_task_path(task), 
          data: { 
            turbo_frame: "modal",
            turbo_action: "advance" 
          },
          onclick: "event.stopPropagation()",
          class: "group/delete flex items-center justify-center rounded-md px-3 py-1.5 text-xs font-medium bg-red-50 text-red-600 hover:bg-red-100 hover:text-red-700 border border-red-200 transition-all duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-1" do %>
      <span class="flex items-center justify-center space-x-1">
        <svg class="w-3 h-3 group-hover/delete:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
        </svg>
        <span>Delete</span>
      </span>
    <% end %>
  </div>
</div>